{
  "info": {
    "name": "E-Commerce Services GET Tests",
    "_postman_id": "ecomm-get-tests",
    "description": "Minimal GET-only tests for staging: Order Service and Product Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Product Service Health",
      "request": {
        "method": "GET",
        "url": "http://{{product_ip}}:{{product_port}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
            "pm.test('Service is healthy', () => pm.expect(pm.response.json().status).to.eql('ok'));"
          ]
        }
      ]
    },
    {
      "name": "Get All Orders",
      "request": {
        "method": "GET",
        "url": "http://{{order_ip}}:{{order_port}}/orders?skip=0&limit=5"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
            "pm.test('Response is array', () => pm.expect(pm.response.json()).to.be.an('array'));"
          ]
        }
      ]
    }
  ]
}
